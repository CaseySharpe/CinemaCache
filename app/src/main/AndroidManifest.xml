<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cinemacachefinal">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CinemaCacheFinal"
        tools:targetApi="31">
        <activity
            android:name=".ReviewListActivity"
            android:exported="false"
            android:label="Reviews" />
        <activity
            android:name=".ReviewActivity"
            android:exported="false"
            android:label="New Review"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login">
            <intent-filter>
                 <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>/>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="Register User" />
        <activity
            android:name=".WatchListActivity"
            android:exported="false"
            android:label="Watchlist" />
        <activity
            android:name=".TopMovieListActivity"
            android:exported="false"
            android:label="Top Movies" />
        <activity
            android:name=".DetailViewActivity"
            android:exported="false"
            android:label="Details" />
        <activity
            android:name=".FindMoviesActivity"
            android:exported="false"
            android:label="Movies" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Movies" />

    </application>

</manifest>